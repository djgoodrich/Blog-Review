<div class="container">
    {{> navbar/navbar}}
    <!-- Add cumulative rating later -->
    <h1 class="mt-3 mb-3 title">{{blog.title}}</h1>
    <p class="underline"><a href="{{blog.website}}" target="_blank">{{blog.website}}</a></p>
    <p class="indent">{{blog.description}}</p>
    <h2>Reviews</h2>
    <button type="button" class="btn btn-warning" data-toggle="modal" 
        data-target={{#unless currentUserSub}}"#requiresLoginModal"{{/unless}}
        {{#if currentUserSub}}"#writeReviewModal"{{/if}}>Write Review
    </button>    
    {{#each blog.Reviews}}
    <div class="card mt-3">
        <div class="card-body">
            <h3 class="title">{{this.title}}</h3>
            <h4><em><a class="colored-link" href="/user/{{this.User.id}}">{{this.User.name}}</a></em></h4>
            <p>{{this.body}}</p>
        </div>
    </div>
    {{/each}}
</div>

{{#unless currentUserSub}}
    {{> modals/requiresLogin}}
{{/unless}}

{{#if currentUserSub}}
    {{> modals/writeReview}}
{{/if}}

{{> scripts/scripts}}