


<div class ="container">
    {{> navbar}}
    <!-- Add cumulative rating later -->
    <h1 class="mt-3 mb-3">{{blog.title}}</h1>
    <p><a href="{{blog.website}}" target="_blank">{{blog.website}}</a></p>
    <p>{{blog.description}}</p>
    <h2>Reviews</h2>
    {{#each Reviews}}
        <div class="card mt-3">
            <div class="card-body">
                <h3>{{this.title}}</h3>
                <!-- Need to also include User table -->
                <h4><em>Author</em></h4>
                <p>{{this.body}}</p>
            </div>
        </div>
    {{/each}}
 </div>