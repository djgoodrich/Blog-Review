<div class ="container">
{{> navbar/navbar}}

    <h1 class="mt-3 mb-3" id="userHead">{{user.name}}</h1>
    <h2 id="indentation">Reviews</h2>
    {{#each user.Reviews}}
        <div class="card mt-3">
            <div class="card-body" >
                <h3 class="title"><a href="blog/{{this.Blog.id}}" class="no-decoration-link">{{this.Blog.title}}</a></h3>
  <!-- Modal -->

 <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModalLong">Edit Review</button>
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">{{this.title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <p>{{this.body}}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

                <h4 class="underline"><em>{{this.title}}</em></h4>
                <p class="indent">{{this.body}}</p>
            </div>
        </div>
    {{/each}}
 </div>

 {{> scripts/scripts}}